{
	"name": "Twitica Desktop",
	"version": "1.8.1",
	"description": "A Twitter client focusing on timeline view.",
	"options_page": "twplus/options.html",
	"app": {
		"launch": {
			"local_path": "index.html",
			"container": "panel",
			"height": 650,
			"width": 500
		}
	},
	"permissions": [
		"http://twitter.com/",
		"https://api.twitter.com/",
		"https://userstream.twitter.com/",
		"http://maps.google.com/",
		"https://api-ssl.bit.ly/",
		"http://api.twitpic.com/",
		"https://twitpic.com/",
		"tabs",
		"notifications",
		"geolocation"
	],
	"icons": {
		"16": "logo16.png",
		"48": "logo48.png",
		"128": "logo.png"
	},
	"content_scripts": [
		{
			"matches": ["https://api.twitter.com/oauth/*"],
			"js": ["jquery.js", "twplus/getPIN.js"],
			"run_at": "document_end"
		}
	],
	"minimum_chrome_version":  "9.0",
	"background_page" : "twplus/handler.html"
}